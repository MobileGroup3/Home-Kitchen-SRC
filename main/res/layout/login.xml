<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp16"
    android:paddingRight="@dimen/dp16"
    android:weightSum="1"
    android:layout_gravity="center_vertical">


    <EditText
        android:id="@+id/identityField"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:layout_marginBottom="33dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:hint="Email"
        android:inputType="text"
        android:textSize="@dimen/text_medium" />


    <EditText
        android:id="@+id/passwordField"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:layout_alignBaseline="@+id/restoreLink"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:hint="Password"
        android:inputType="textPassword"
        android:singleLine="false"
        android:textSize="@dimen/text_medium"
        android:layout_marginBottom="38dp" />


    <TextView
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/login_text"
        android:textSize="@dimen/text_medium"
        android:background="@drawable/border"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="10dp" />
        <!--android:layout_weight="0.10" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/registerLink"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp48"
        android:layout_alignBaseline="@+id/loginButton"
        android:layout_alignBottom="@+id/loginButton"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:linksClickable="false"
        android:singleLine="false"
        android:text="@string/register_text"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="@dimen/text_medium"
        android:layout_weight="0.06"
        android:gravity="center_vertical|end"
        android:paddingRight="30dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/restoreLink"
        android:layout_width="143dp"
        android:layout_height="@dimen/dp48"
        android:layout_above="@+id/linearLayout2"
        android:layout_toEndOf="@+id/space"
        android:layout_toRightOf="@+id/space"
        android:clickable="true"
        android:text="@string/restore_link"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="@dimen/text_medium"
        android:layout_weight="0.08"
        android:gravity="center_vertical|center_horizontal" />

</LinearLayout>

    <!--<ImageView-->
        <!--android:layout_width="166dp"-->
        <!--android:layout_height="89dp"-->
        <!--android:src="@drawable/facebook"-->
        <!--android:layout_gravity="right" />-->

    <ImageView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/or_divider"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="30dp"/>

    <ImageView
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:src="@drawable/newfb_login"
        android:id="@+id/loginFacebookButton"
        android:layout_gravity="center_horizontal" />

</LinearLayout>